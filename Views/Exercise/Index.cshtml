@model IEnumerable<FitnessTrackerCMS.DTOs.ExerciseListDto>

@{
    ViewData["Title"] = "Exercises";
}

<h1>Exercises</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MuscleGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difficulty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EquipmentCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MuscleGroup)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Difficulty)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EquipmentCount)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ExerciseId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ExerciseId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ExerciseId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>