@model IEnumerable<FitnessTrackerCMS.DTOs.WorkoutListDto>

@{
    ViewData["Title"] = "Workouts";
}

<h1>Workouts</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Duration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CaloriesEstimated)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExerciseCount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Duration) minutes
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CaloriesEstimated)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExerciseCount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.WorkoutId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.WorkoutId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.WorkoutId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>