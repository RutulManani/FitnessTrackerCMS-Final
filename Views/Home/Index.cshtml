@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3 mb-0">Dashboard</h1>
    </div>

    <!-- Stats Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Workouts
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalWorkouts</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dumbbell fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Total Exercises
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalExercises</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-running fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow-sm h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Equipment Items
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.TotalEquipment</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-weight fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Workouts -->
    <div class="card shadow-sm mb-4">
        <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
            <h6 class="m-0 font-weight-bold">Recent Workouts</h6>
            <a asp-controller="Workout" asp-action="Index" class="btn btn-sm btn-link">View All</a>
        </div>
        <div class="card-body">
            @if (ViewBag.RecentWorkoutsList != null && ViewBag.RecentWorkoutsList.Count > 0)
            {
                <div class="list-group">
                    @foreach (var workout in ViewBag.RecentWorkoutsList)
                    {
                        <a href="#" class="list-group-item list-group-item-action">
                            <div class="d-flex w-100 justify-content-between">
                                <h6 class="mb-1">@workout.Name</h6>
                                <small>@workout.Date.ToString("MMM dd")</small>
                            </div>
                            <div class="d-flex justify-content-between">
                                <small class="text-muted">@workout.Duration min</small>
                                <small class="text-muted">@workout.ExerciseCount exercises</small>
                            </div>
                        </a>
                    }
                </div>
            }
            else
            {
                <div class="text-center py-4">
                    <p class="text-muted">No recent workouts found</p>
                    <a asp-controller="Workout" asp-action="Create" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus"></i> Add Workout
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Quick Links -->
    <div class="row">
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-dumbbell fa-3x mb-3 text-primary"></i>
                    <h5 class="card-title">Workouts</h5>
                    <p class="card-text text-muted">Manage your workout sessions</p>
                    <a asp-controller="Workout" asp-action="Index" class="btn btn-primary">View Workouts</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-running fa-3x mb-3 text-success"></i>
                    <h5 class="card-title">Exercises</h5>
                    <p class="card-text text-muted">Manage exercise library</p>
                    <a asp-controller="Exercise" asp-action="Index" class="btn btn-success">View Exercises</a>
                </div>
            </div>
        </div>
        <div class="col-lg-4 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="fas fa-weight fa-3x mb-3 text-info"></i>
                    <h5 class="card-title">Equipment</h5>
                    <p class="card-text text-muted">Manage gym equipment</p>
                    <a asp-controller="Equipment" asp-action="Index" class="btn btn-info">View Equipment</a>
                </div>
            </div>
        </div>
    </div>
</div>